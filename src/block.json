{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "hm/popup",
	"version": "0.2.0",
	"title": "Popup Block",
	"category": "widgets",
	"icon": "exit",
	"description": "Popup wrapper block",
	"example": {},
	"allowedBlocks": [
		"core/group"
	],
	"supports": {
		"html": false,
		"anchor": true,
		"multiple": true,
		"layout": {
			"default": {
				"type": "constrained"
			},
			"allowJustification": false,
			"allowEditing": true,
			"allowCustomContentAndWideSize": true
		},
		"color": {
			"background": true
		},
		"background": {
			"backgroundImage": true,
			"backgroundSize": true
		}
	},
	"attributes": {
		"opacity": {
			"type": "number",
			"default": 75
		},
		"trigger": {
			"type": "string",
			"default": "click",
			"enum": [ "click", "exit" ]
		},
		"cookieExpiration": {
			"type": "number",
			"default": 7
		}
	},
	"selectors": {
		"root": ".wp-block-hm-popup",
		"color": {
			"background": ".wp-block-hm-popup::backdrop"
		},
		"background": {
			"backgroundImage": ".wp-block-hm-popup::backdrop",
			"backgroundSize": ".wp-block-hm-popup::backdrop"
		}
	},
	"textdomain": "hm-popup",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
