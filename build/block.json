{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "hm/popup",
  "version": "1.0.0",
  "title": "Popup Block",
  "category": "widgets",
  "icon": "exit",
  "description": "Popup wrapper block",
  "example": {},
  "supports": {
    "html": false,
    "anchor": true,
    "multiple": false
  },
  "attributes": {
    "opacity": {
      "type": "number",
      "default": 75
    },
    "trigger": {
      "type": "string",
      "default": "click",
      "enum": [
        "click",
        "exit"
      ]
    },
    "cookieExpiration": {
      "type": "number",
      "default": 7
    }
  },
  "selectors": {
    "root": ".wp-block-hm-popup",
    "color": {
      "background": ".wp-block-hm-popup > .wp-block-hm-popup__backdrop"
    }
  },
  "textdomain": "hm-popup",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js"
}